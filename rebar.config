%% -*- mode: erlang -*-

{erl_opts, [warnings_as_errors]}.
{deps, [
  {jsx, "2.8.2"},
  {tomerl, "0.4.0"}
]}.

{escript_incl_apps,
 [testgen, jsx, tomerl]}.
{escript_main_app, testgen}.
{escript_name, testgen}.
{escript_emu_args, "%%! +sbtu +A0\n"}.

{dialyzer, [
  {warnings, [
    no_return,
    no_unused,
    no_improper_lists,
    no_fun_app,
    no_match,
    no_opaque,
    no_fail_call,
    no_contracts,
    no_behaviours,
    no_undefined_callbacks,
    unmatched_returns,
    error_handling,
    race_conditions
  ]},
  {plt_app, all_deps}
]}.

%% Profiles
{profiles, [{test,
             [{erl_opts, [debug_info]}
            ]}]}.
